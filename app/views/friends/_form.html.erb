<%= form_with model: @friend do |form| %>
  <div>
    <%= form.label :first_name, class: "form-label" %><br>
    <%= form.text_field :first_name, class:"form-control", placeholder: "First Name"%>
    <% @friend.errors.full_messages_for(:first_name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :last_name, class: "form-label" %><br>
    <%= form.text_field :last_name, class:"form-control", placeholder: "Last Name" %>
    <% @friend.errors.full_messages_for(:last_name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :age, class: "form-label" %><br>
    <%= form.text_field :age, class:"form-control", placeholder: "Age" %>
    <% @friend.errors.full_messages_for(:age).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :email, class: "form-label" %><br>
    <%= form.text_field :email, class:"form-control", placeholder: "Email" %>
    <% @friend.errors.full_messages_for(:email).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <br>
  <div>
    <%= form.submit class: "btn btn-secondary" %>
  </div>
<% end %>