<h1>Welcome to Friends app!</h1>

<table>
	<tr>
    	<th>First Name</th>
    	<th>Last Name</th>
    	<th>Age</th>
    	<th>Email</th>
    	<th></th>
    	<th></th>
  	</tr>
  	<% @friends.each do |friend|%>
  	<tr>
    	<td><%= friend.first_name %></td>
    	<td><%= friend.last_name %></td>
    	<td><%= friend.age %></td>
    	<td><%= friend.email %></td>
    	<td><%= link_to "details", friend %></td>
    	<td><%= link_to "edit", edit_friend_path(friend)%></td>
  	</tr>
	<% end %>	
</table>

<%= link_to "new friend", new_friend_path%>
